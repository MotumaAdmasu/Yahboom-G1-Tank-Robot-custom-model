<?xml version="1.0"?>
<robot name="yahboom_tank">

  <!-- MATERIAL DEFINITIONS -->
  <material name="green">
    <color rgba="0.0 0.6 0.0 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  <material name="dark_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <!-- BASE FOOTPRINT - This moves around the world -->
  <link name="base_footprint"/>

  <!-- MAIN CHASSIS - Tank Body -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.08"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- LEFT TRACK - Long caterpillar track -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- RIGHT TRACK - Long caterpillar track -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- TURRET -->
  <link name="turret">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.05"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- GUN BARREL -->
  <link name="gun">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- BLUE WHEELS - FIXED, NO ROTATION -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- JOINTS -->

  <!-- Base to chassis - THIS MOVES THE ENTIRE TANK -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Left track -->
  <joint name="left_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.0 0.08 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Right track -->
  <joint name="right_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.0 -0.08 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Turret -->
  <joint name="turret_joint" type="fixed">
    <parent link="chassis"/>
    <child link="turret"/>
    <origin xyz="0.0 0.0 0.07" rpy="0 0 0"/>
  </joint>

  <!-- Gun -->
  <joint name="gun_joint" type="fixed">
    <parent link="turret"/>
    <child link="gun"/>
    <origin xyz="0.08 0.0 0.0" rpy="0 1.5708 0"/>
  </joint>

  <!-- WHEELS - FIXED, NO ROTATION -->
  <joint name="left_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.08 0.0" rpy="1.5708 0 0"/>
  </joint>

  <joint name="right_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.08 0.0" rpy="1.5708 0 0"/>
  </joint>

</robot>
