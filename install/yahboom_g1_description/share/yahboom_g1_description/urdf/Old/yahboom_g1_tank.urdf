<?xml version="1.0"?>
<robot name="yahboom_g1_tank">

  <!-- MAIN CHASSIS -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.18 0.13 0.06"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.18 0.13 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- LEFT TRACK (modeled as a large wheel) -->
  <link name="left_track">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- RIGHT TRACK (modeled as a large wheel) -->
  <link name="right_track">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- JOINTS FOR TANK TRACKS -->
  <joint name="left_track_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.0 0.09 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_track_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.0 -0.09 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </link>

  <!-- Gazebo Differential Drive Plugin for TANK CONTROL -->
  <gazebo>
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>chassis</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <left_joint>left_track_joint</left_joint>
      <right_joint>right_track_joint</right_joint>
      <wheel_separation>0.18</wheel_separation>
      <wheel_diameter>0.12</wheel_diameter>
      <max_wheel_torque>20</max_wheel_torque>
      <wheel_acceleration>0.5</wheel_acceleration>
    </plugin>
  </gazebo>

  <!-- Add some visual details to make it look more like a tank -->
  <link name="turret">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.03"/>
      </geometry>
      <material name="dark_green">
        <color rgba="0.1 0.5 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="turret_joint" type="fixed">
    <parent link="chassis"/>
    <child link="turret"/>
    <origin xyz="0.05 0.0 0.045" rpy="0 0 0"/>
  </joint>

</robot>
