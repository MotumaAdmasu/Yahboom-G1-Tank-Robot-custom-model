<?xml version="1.0"?>
<robot name="yahboom_g1_tank">

  <!-- MAIN CHASSIS - BRIGHT YELLOW -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.15 0.10 0.08"/>
      </geometry>
      <material name="bright_yellow">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.10 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- LEFT TRACK - BRIGHT RED LONG BOX -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.20 0.02 0.04"/>
      </geometry>
      <material name="bright_red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.20 0.02 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.003"/>
    </inertial>
  </link>

  <!-- RIGHT TRACK - BRIGHT RED LONG BOX -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.20 0.02 0.04"/>
      </geometry>
      <material name="bright_red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.20 0.02 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.003"/>
    </inertial>
  </link>

  <!-- LEFT FRONT WHEEL - BRIGHT BLUE -->
  <link name="left_front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- LEFT BACK WHEEL - BRIGHT BLUE -->
  <link name="left_back_wheel">
    <visual>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- RIGHT FRONT WHEEL - BRIGHT BLUE -->
  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- RIGHT BACK WHEEL - BRIGHT BLUE -->
  <link name="right_back_wheel">
    <visual>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
      <material name="bright_blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.025" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- TURRET - BRIGHT GREEN -->
  <link name="turret">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.03"/>
      </geometry>
      <material name="bright_green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- GUN BARREL - BRIGHT ORANGE -->
  <link name="gun">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.008"/>
      </geometry>
      <material name="bright_orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.08" radius="0.008"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- JOINTS -->

  <!-- Left Track - BRIGHT RED -->
  <joint name="left_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.0 0.06 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Right Track - BRIGHT RED -->
  <joint name="right_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.0 -0.06 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Left Front Wheel - BRIGHT BLUE -->
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_front_wheel"/>
    <origin xyz="0.06 0.06 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Back Wheel - BRIGHT BLUE -->
  <joint name="left_back_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_back_wheel"/>
    <origin xyz="-0.06 0.06 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Front Wheel - BRIGHT BLUE -->
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_front_wheel"/>
    <origin xyz="0.06 -0.06 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Back Wheel - BRIGHT BLUE -->
  <joint name="right_back_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_back_wheel"/>
    <origin xyz="-0.06 -0.06 0.0" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Turret - BRIGHT GREEN -->
  <joint name="turret_joint" type="fixed">
    <parent link="chassis"/>
    <child link="turret"/>
    <origin xyz="0.0 0.0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- Gun Barrel - BRIGHT ORANGE -->
  <joint name="gun_joint" type="fixed">
    <parent link="turret"/>
    <child link="gun"/>
    <origin xyz="0.05 0.0 0.0" rpy="0 1.5708 0"/>
  </joint>

  <!-- Gazebo Differential Drive Plugin -->
  <gazebo>
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>chassis</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <left_joint>left_front_wheel_joint</left_joint>
      <left_joint>left_back_wheel_joint</left_joint>
      <right_joint>right_front_wheel_joint</right_joint>
      <right_joint>right_back_wheel_joint</right_joint>
      <wheel_separation>0.12</wheel_separation>
      <wheel_diameter>0.04</wheel_diameter>
      <max_wheel_torque>8</max_wheel_torque>
      <wheel_acceleration>1.0</wheel_acceleration>
    </plugin>
  </gazebo>

</robot>
