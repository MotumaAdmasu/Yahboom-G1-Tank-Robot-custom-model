<?xml version="1.0"?>
<robot name="yahboom_tank">

  <!-- MATERIAL DEFINITIONS -->
  <material name="green">
    <color rgba="0.0 0.6 0.0 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  <material name="dark_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <!-- MAIN CHASSIS - Tank Body -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.08"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.18 0.12 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- LEFT TRACK - Long caterpillar track -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- RIGHT TRACK - Long caterpillar track -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- TURRET -->
  <link name="turret">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.05"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.06" radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- GUN BARREL -->
  <link name="gun">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- LEFT DRIVE WHEEL -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- RIGHT DRIVE WHEEL -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- JOINTS -->
  <joint name="left_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.0 0.08 0.0" rpy="0 0 0"/>
  </joint>

  <joint name="right_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.0 -0.08 0.0" rpy="0 0 0"/>
  </joint>

  <joint name="turret_joint" type="fixed">
    <parent link="chassis"/>
    <child link="turret"/>
    <origin xyz="0.0 0.0 0.07" rpy="0 0 0"/>
  </joint>

  <joint name="gun_joint" type="fixed">
    <parent link="turret"/>
    <child link="gun"/>
    <origin xyz="0.08 0.0 0.0" rpy="0 1.5708 0"/>
  </joint>

  <!-- CORRECTED WHEEL JOINTS - SIMPLIFIED ROTATION -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.08 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.08 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
