<?xml version="1.0"?>
<robot name="yahboom_tank">

  <!-- MATERIAL DEFINITIONS -->
  <material name="green">
    <color rgba="0.0 0.6 0.0 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  <material name="dark_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- BASE FOOTPRINT - This moves around the world -->
  <link name="base_footprint"/>

  <!-- MAIN CHASSIS - Tank Body -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.08"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- LEFT TRACK - Long caterpillar track -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- RIGHT TRACK - Long caterpillar track -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.22 0.04 0.06"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <!-- TURRET -->
  <link name="turret">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.05"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- GUN BARREL -->
  <link name="gun">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- BLUE WHEELS - FIXED, NO ROTATION -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- CAMERA -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.04 0.05 0.03"/>
      </geometry>
      <material name="white"/>
    </visual>
    <visual>
      <!-- Camera lens -->
      <geometry>
        <cylinder length="0.01" radius="0.008"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0.022 0.0 0.0" rpy="0 1.5708 0"/>
    </visual>
  </link>

  <!-- LIDAR -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
      <material name="red"/>
    </visual>
    <visual>
      <!-- Lidar top -->
      <geometry>
        <cylinder length="0.005" radius="0.025"/>
      </geometry>
      <material name="dark_gray"/>
      <origin xyz="0.0 0.0 0.0125" rpy="0 0 0"/>
    </visual>
  </link>

  <!-- JOINTS -->

  <!-- Base to chassis - THIS MOVES THE ENTIRE TANK -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Left track -->
  <joint name="left_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.0 0.08 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Right track -->
  <joint name="right_track_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.0 -0.08 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Turret -->
  <joint name="turret_joint" type="fixed">
    <parent link="chassis"/>
    <child link="turret"/>
    <origin xyz="0.0 0.0 0.07" rpy="0 0 0"/>
  </joint>

  <!-- Gun -->
  <joint name="gun_joint" type="fixed">
    <parent link="turret"/>
    <child link="gun"/>
    <origin xyz="0.08 0.0 0.0" rpy="0 1.5708 0"/>
  </joint>

  <!-- Wheels - FIXED, NO ROTATION -->
  <joint name="left_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.08 0.0" rpy="1.5708 0 0"/>
  </joint>

  <joint name="right_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.08 0.0" rpy="1.5708 0 0"/>
  </joint>

  <!-- Camera mounted on front of turret -->
  <joint name="camera_joint" type="fixed">
    <parent link="turret"/>
    <child link="camera_link"/>
    <origin xyz="0.05 0.0 0.02" rpy="0 0 0"/>
  </joint>

  <!-- LiDAR mounted on top of turret -->
  <joint name="lidar_joint" type="fixed">
    <parent link="turret"/>
    <child link="lidar_link"/>
    <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- GAZEBO PLUGINS FOR SENSORS -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>600</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>tank_camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor type="ray" name="lidar">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_lidar_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
